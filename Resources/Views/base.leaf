<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='urf-8'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="/styles/code.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" />
    <link rel="manifest" href="/manifest.json">
    <title>#(meta.title) | Vote</title>
    <link rel="stylesheet" type="text/css" href="/styles/app.css">
  </head>
  <body>
    <div class='header'>
      <div class='headerInner'>
        #if(!meta.title == "Welcome") {
          <a id='backButton'><span>&lt;</span> Back</a>
        }
        <h1 class='pageTitle'>#(meta.title)</h1>
        #if(!meta.title == "Welcome") {
          <div class='space'></div>
        }
      </div>
    </div>
    
    <div class='nav'>
      <div class='navInner'>
        <a href='/' class='active'}><img src='/icons/vote-active.png'><p>Vote</p></a>
        #if(meta.userLoggedIn) {
          <form id='logoutForm' method='post' action='/logout'>
            <input type='hidden' name='name' value='value'></input>
          </form>
          <a onclick="document.getElementById('logoutForm').submit();"><img src='/icons/logout.png'><p>Log Out</p></a>
        }
      </div>
    </div>
    #get(content)
  </body>
</html>
