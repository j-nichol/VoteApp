<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='urf-8' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>#(meta.title) | Vote</title>
    <link rel="stylesheet" type="text/css" href="/styles/app.css">
  </head>
  <body>
    <div class='nav'>
      <div class='navInner'>
        <a href='/' #if(!meta.isHelp) { class='active' }><img #if(!meta.isHelp) { src='/icons/vote-active.png'} else { src='icons/vote.png'}><p>Vote</p></a>
        <a href='/elections/create' #if(meta.isHelp) { class='active' }><img #if(meta.isHelp) { src='/icons/help-active.png'} else { src='icons/help.png'}><p>Help</p></a>
        #if(meta.userLoggedIn) {
        <form method='post' action='/logout'>
          <input type='submit' value='Log Out' id='logOutButton'></input>
        </form>
        }
      </div>
    </div>
    #get(content)
  </body>
</html>
